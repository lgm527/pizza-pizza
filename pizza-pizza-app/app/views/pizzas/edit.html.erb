<h1>Edit Pizza</h1>

<div id="pizza_form">
<h2>Toppings:</h2>
<%= form_tag("/pizza_toppings/update", method: :put) do %>
	<%= hidden_field(:pizza_topping, :pizza_id, :value => @pizza.id) %>
  <% @toppings.each do |t| %>
	  	<%= check_box_tag name = "pizza_topping[topping_id][]", value = t.id , checked = @pizzas_toppings.include?(t.id), class: "topping_check", id: "pizza_topping_topping_id_#{t.id}"%>
	  	<label for="pizza_topping_topping_id_<%= t.id %>" class="topping_name"><%= t.name %></label>
  <% end %>
  <%= submit_tag("Cook It! I'm Hungry dude.") %>
<% end %>
</div>
